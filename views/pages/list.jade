extends ../layout.jade
block content
    div.container
        table.table.table-hover.table-striped
            thead
                tr
                    th 电影名称
                    th 导演
                    th 国家
                    th 上映年份
                    th 录入时间
                    th 查看
                    th 更新
                    th 删除
            tbody
                each movie in movies
                    tr
                        td #{movie.title}
                        td #{movie.doctor}
                        td #{movie.country}
                        td #{moment(movie.year).format('MM/DD/YYYY')}
                        td #{moment(movie.meta.createAt).format('MM/DD/YYYY')}
                        td 
                            a(href='/movie/#{movie.id}') 查看
                        td
                            a(href='/admins/update/#{movie.id}') 更新
                        td
                            //- a(href='/admin/del/#{movie.id}') 删除
                            a(href='javascript:void(0)', class='movie-del', data-id="#{movie.id}") 删除
    script(src='/js/admin.js', type='text/javascript')