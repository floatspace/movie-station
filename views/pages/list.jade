extends ../layout.jade
block content
    div.container
        table.table.table-hover.table-striped
            thead
                tr
                    th 电影名称
                    th 导演
                    th 国家
                    th 上映年份
                    th 录入时间
                    th 查询
                    th 更新
                    th 删除
            tbody
                each movie in movies
                    tr
                        td #{movie.title}
                        td #{movie.doctor}
                        td #{movie.country}
                        td #{movie.year}
                        td #{movie.createTime}
                        td 
                            a(id='#{movie.id}', href='#') 查询
                        td
                            a(id='#{movie.id}', href='#') 更新
                        td
                            a(id='#{movie.id}', href='#') 删除