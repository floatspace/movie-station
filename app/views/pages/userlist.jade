extends ../layout.jade
block content
    div.container
        table.table.table-hover.table-striped
            thead
                tr
                    th 用户名
                    th 密码
                    th 录入时间
                    th 查看
                    th 更新
                    th 删除
            tbody
                each user in users
                    tr
                        td #{user.username}
                        td #{user.password}
                        td #{moment(user.meta.createAt).format('MM/DD/YYYY')}
                        td 
                            a(href='/user/#{user.id}') 查看
                        td
                            a(href='/admins/update/#{user.id}') 更新
                        td
                            a(href='/users/del/#{user.id}') 删除