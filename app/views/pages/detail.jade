extends ../layout.jade
block content
    div.container
        div.row
            div.col-md-7
                video(preload="auto", autoplay="", controls="controls", name="media")
                    source(src="#{movie.flash}", type="video/mp4")
            div.col-md-5
                dl.dl-horizontal
                    dt 导演
                    dd #{movie.doctor}
                    dt 地区
                    dd #{movie.country}
                    dt 名称
                    dd #{movie.title}
                    dt 上映年份
                    dd #{moment(movie.year).format('MM/DD/YYYY')}
                    dt 语种
                    dd #{movie.language}
                    dt 简介
                    dd #{movie.summary}